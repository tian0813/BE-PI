    "/auth/authorize": {
      "post": {
        "summary": "Authorize",
        "tags": ["Auth"],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
